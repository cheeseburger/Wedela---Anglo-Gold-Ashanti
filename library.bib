issn = {0959-6526},
journal = {Journal of Cleaner Production},
keywords = {Mine tailings management},
number = {4},
pages = {471--479},
title = {{Life cycle assessment of mine tailings management in Canada}},
url = {http://www.sciencedirect.com/science/article/pii/S0959652608002114},
