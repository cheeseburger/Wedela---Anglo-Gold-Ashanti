issn = {16807324},
journal = {Atmospheric Chemistry and Physics},
number = {5},
pages = {3119--3145},
title = {{Aerosol-cloud interactions in mixed-phase convective clouds - Part 1: Aerosol perturbations}},
volume = {18},
