issn = {2156-2202},
journal = {Journal of Geophysical Research: Atmospheres},
number = {D6},
pages = {6043--6058},
title = {{Global sensitivity studies of the direct radiative forcing due to anthropogenic sulfate and black carbon aerosols}},
