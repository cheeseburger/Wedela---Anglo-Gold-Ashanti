@article{Mazoyer2016,
abstract = {{\textless}p{\textgreater}Comprehensive field campaigns dedicated to fog life cycle observation were conducted during the winters of 2010{\&}ndash;2013 at the SIRTA observatory in the suburb of Paris. In order to document their properties, in situ microphysical measurements collected during 23 fog events are examined here. They reveal large variability in number, concentration and size of both aerosol background before the fog onset and fog droplets according to the different cases. The objective of this paper is to evaluate the impact of aerosol particles on the fog microphysics. {\textless}br{\textgreater}{\textless}br{\textgreater} To derive an accurate estimation of the actual activated fog droplet number concentration {\textless}i{\textgreater}N{\textless}/i{\textgreater} {\textless}i{\textgreater}act{\textless}/i{\textgreater}, we determine the hygroscopicity parameter $\kappa$, the dry and the wet critical diameter and the critical supersaturation for each case by using an iterative procedure based on the $\kappa$-K{\"{o}}hler theory that combines cloud condensation nuclei (CCN), dry particle and droplet size distribution measurements. Resulting values of $\kappa$ = 0.17 ± 0.05 were found typical of continental aerosols. Our study reveals low values of the derived critical supersaturation with a median of 0.043 {\%} and large values for both wet and dry activation diameters. Consequently, the corresponding {\textless}i{\textgreater}N{\textless}/i{\textgreater} {\textless}i{\textgreater}act{\textless}/i{\textgreater} values are low with median concentrations of 53.5 cm{\textless}sup{\textgreater}{\&}minus;3{\textless}/sup{\textgreater} and 111 cm{\textless}sup{\textgreater}{\&}minus;3{\textless}/sup{\textgreater} within the percentile 75th. {\textless}br{\textgreater}{\textless}br{\textgreater} No detectable trend between the concentration of aerosol particles with diameter {\textgreater} 200 nm and {\textless}i{\textgreater}N{\textless}/i{\textgreater} {\textless}i{\textgreater}act{\textless}/i{\textgreater} was observed. In contrast the CCN data at 0.1 {\%} supersaturation exhibits a strong correlation with these aerosol concentrations. We therefore conclude that the actual supersaturations reached during these fog episodes are too low and no simultaneous increase of aerosols {\textgreater} 200 nm and droplet concentrations can be observed. Moreover our analysis suggests that a high aerosol loading limits the supersaturation values. It is also found that the activated fraction mainly depends on the aerosol size while the hygroscopicity appears to be of a secondary importance. {\textless}br{\textgreater}{\textless}br{\textgreater} Although radiative fogs are usually associated with higher aerosol loading rather than to stratus lowering events, our analysis reveals that the activated particle concentrations at the beginning of the event are similar for both types of fog. However the evolution of the droplet concentration during the fog life cycle shows significant differences between both types of fog.{\textless}/p{\textgreater}},
author = {Mazoyer, M. and Burnet, F. and Roberts, G. C. and Haeffelin, M. and Dupont, J.-C and Elias, T.},
doi = {10.5194/acp-2016-103},
file = {:home/roelof/Documents/Mendeley Desktop/Mazoyer et al.{\_}2016{\_}Experimental study of the aerosol impact on fog microphysics.pdf:pdf},
issn = {1680-7375},
journal = {Atmospheric Chemistry and Physics Discussions},
number = {May},
pages = {1--35},
title = {{Experimental study of the aerosol impact on fog microphysics}},
