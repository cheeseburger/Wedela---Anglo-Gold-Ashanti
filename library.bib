journal = {Journal of Geophysical Research},
keywords = {0305 Atmospheric Composition and Structure: Aeros,0320 Atmospheric Composition and Structure: Cloud,3311 Atmospheric Processes: Clouds and aerosols,3314 Atmospheric Processes: Convective processes,3355 Atmospheric Processes: Regional modeling,aerosol effects,bulk parameterization,numerical modeling,spectral microphysics,squall lines},
month = {nov},
