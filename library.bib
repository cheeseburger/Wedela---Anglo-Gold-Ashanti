d and could... [ABSTRACT FROM AUTHOR] },
author = {{Humphrey M. D.Istok}, J D.Lee J Y.Hevesi J A.Flint A L},
issn = {0739-0572},
journal = {Journal of Atmospheric {\&} Oceanic Technology. Dec97},
number = {6},
title = {{A New Method for Automated Dynamic Calibration of Tipping-Bucket Rain Gauges. }},
volume = {14},
year = {1513}
}
